<body>
    <header>
        <h1 style="position: absolute;left: 120px;top: 0;line-height: 80px;">Code Coffee</h1>

        <nav>
            <ul>
                <li>
                    <a>MANAGE</a>
                    <ul>
                        <li><a href="/products/f/add">Add Products</a></li>
                        <li><a href="/products">Products List</a></li>
                        <li><a href="/orders">Orders List</a></li>
                        <li><a href="/members">Members List</a></li>
                    </ul>
                </li>
                <li><a href="/">Home</a></li>
                <li><a href="/members/page">MEMBER</a></li>
                <% if (!manageHeader.userInfo) { %>
                <li><a href="/login">SIGNIN</a></li>
                <% } else { %>
                <li><a href="/signout">SIGNOUT</a></li>
                <% } %>
                <li><a href="/shoppingCart">CART</a></li>
             </ul>
       </nav>
    </header>
    <main>
    <nav>
    <div class="container">
        <div class="d-flex outer">
            <div class="row desktop-menu">
                <div id="category-menu">
                    <form action="/products/f/search" method="GET">
                        <input type="search" name="name" placeholder="Press enter to search">
                    </form>
                    <br>
                    <p class="gnav__link"><h3>CATEGORY</h3></p>
                        <div class="category-list"> 
                            <ul>
                                <li> <a href="">Roast Level</a>
                                    <ul><li><a href="">Light roast</a> </li>  
                                        <li> <a href="">Medium roast</a> </li>  
                                        <li> <a href="">Dark roast</a> </li>  </ul>  </li>  
                                <li> <a href="">Region</a>  
                                    <ul><li> <a href="">Asia / Oceania</a> </li>  
                                        <li> <a href="">Latin America</a> </li>  
                                        <li> <a href="">Africa</a> </li>  </ul>  </li>  
                                <li> <a>Equipment</a>  
                                    <ul><li> <a href="">LILI</a> </li>  
                                        <li> <a href="">MHW-3BOMBER</a> </li>  
                                        <li> <a href="">NANA COFFEE ROASTERS</a> </li>  </ul>  </li>    
                            </ul>
                        </div>        
                </div>
            </div>

            <div class="row_d-flex-col flex-2" style="align-items: center;">
                <h2>Orders List</h2>
                <br>
                <table>
                    <tr>
                        <th>Order No.</th>
                        <th>Purchaser</th>
                        <th>Payment</th>
                        <th>Status</th>
                        <th>Order Date</th>
                        <th>Details</th>
                    </tr>
                    <% orders.forEach(function(order, index) { %>
                    <tr>
                        <td><%= order.orderId %></td>
                        <td><%= order.account %></td>
                        <td style="text-align: right;">$ <%= order.totalAmount %></td>
                        <td style="text-align: center;"><%= order.status %></td>
                        <td><%= order.createdAt.toLocaleString() %></td>
                        <!-- <td style="text-align: right;"><%= order.quantity %></td>
                        <td style="text-align: right;"><%= order.price %></td>
                        <td><%= order.content %></td> -->
                        <td>
                            <a href="/orders/<%= order.orderId %>"><button class="btn">Check</button></a>
                        </td>
                    </tr>
                    <% }); %>
                </table>
            </div>
        </div>
        </div>
    </nav>
    </main>
<footer>
    <p>ddd</p>
