<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script>
        $(function(){
            <% cart.forEach(function(item, index) { %>
            $("#btn_<%= index %>").click(() => {
                if(confirm('Are you sure you want to delete this?')){
                const id = $("#product_id_<%= index %>").val();
                $.ajax({
                    url  : "/shoppingCart/" + id,
                    type : "DELETE",
                    data : {id: id},
                    dataType: "json"
                })
                .then(res => {
                    console.log(res);
                    window.location.reload();
                })
                .catch(err => {
                    console.log(err);
                });}
            });
            <% }); %>
        });
    </script>
</head>
<body>
    <header>
        <h1 style="position: absolute;left: 80px;top: 0;line-height: 80px;">Code Coffee</h1>
        <nav>
            <ul>
                <% if (manageHeader.userInfo !== undefined && manageHeader.userInfo.account === "admin") { %>
                <li>
                    <a>MANAGE</a>
                    <ul>
                        <li><a href="/products/f/add">Add Products</a></li>
                        <li><a href="/products">Products List</a></li>
                        <li><a href="/orders">Orders List</a></li>
                        <li><a href="/members">Members List</a></li>
                    </ul>
                </li>
                <% } %>
                <li><a href="/">Home</a></li>
                <li><a href="/members/page">MEMBER</a></li>
                <li><a href="/shoppingCart">CART</a></li>
                <li><a href="/login">SIGNIN</a></li>
                <li><a href="/signout">SIGNOUT</a></li>
             </ul>
       </nav>
    </header>
    <main>
    <nav>
    <div class="container">
        <div class="d-flex outer">
            <div class="row">
                <div id="category-menu">
                    <form action="/products/f/search" method="GET">
                        <input type="search" name="name" placeholder="Press enter to search">
                    </form>
                    <br>
                    <p class="gnav__link"><h3>CATEGORY</h3></p>
                        <div class="category-list"> 
                            <ul>
                                <li> <a>Roast Level</a>
                                    <ul><li><form action="/products/f/search" method="GET"> <input type="hidden" name="roastLevel" value="light roast"/> <input type="submit" value="Light roast"> </form></li>  
                                        <li><form action="/products/f/search" method="GET"> <input type="hidden" name="roastLevel" value="medium roast"/> <input type="submit" value="Medium roast"> </form></li>  
                                        <li><form action="/products/f/search" method="GET"> <input type="hidden" name="roastLevel" value="dark roast"/> <input type="submit" value="Dark roast"></form>  </li>  </ul>  </li>  
                                <li> <a>Region</a>  
                                    <ul><li><form action="/products/f/search" method="GET"> <input type="hidden" name="region" value="asia"/> <input type="submit" value="Asia"> </form></li>  
                                        <li><form action="/products/f/search" method="GET"> <input type="hidden" name="region" value="latin america"/> <input type="submit" value="Latin America"> </form></li>  
                                        <li><form action="/products/f/search" method="GET"> <input type="hidden" name="region" value="africa"/> <input type="submit" value="Africa"> </form> </li>  </ul>  </li>  
                                <li> <a href="">Equipment</a>  
                                    <ul><li><form action="/products/f/search" method="GET"> <input type="hidden" name="category" value="brewing"/> <input type="submit" value="Coffee Brewing"> </form> </li>  
                                        <li><form action="/products/f/search" method="GET"> <input type="hidden" name="category" value="grinder"/> <input type="submit" value="Coffee Grinder"> </form> </li>  
                                        <li><form action="/products/f/search" method="GET"> <input type="hidden" name="category" value="others"/> <input type="submit" value="Others"> </form> </li>  </ul>  </li>    
                            </ul>
                        </div>        
                </div>
            </div>

            <div class="row_d-flex-col flex-2" style="align-items: center;">
                <table>
                    <tr>
                        <th>No.</th>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total Price</th>
                        <th>Remove</th>
                    </tr>
                    <% if (cart.length > 0) {
                        let total = 0;
                        cart.forEach(function(item, index) { %>
                    <tr>
                        <td style="text-align: center;"><%= index + 1 %></td>
                        <td><a href="/products/<%= item.product_id %>"><%= item.product_name %></a></td>
                        <td style="text-align: center;"><%= item.product_quantity %></td>
                        <td style="text-align: right;">$ <%= item.product_price %></td>
                        <td style="text-align: right;">$ <%= parseFloat(item.product_quantity) * parseFloat(item.product_price) %></td>
                        <input type="hidden" id="product_id_<%= index %>" name="id" value="<%= item.product_id %>">
                        <td><button type="button" class="btn_remove" id="btn_<%= index %>">Remove</button></td>
                    </tr>
                    <% 
                        total += parseFloat(item.product_quantity) * parseFloat(item.product_price);
                        })
                    %>
                    <tr>
                        <td colspan="4" aling="right"><b>Payment</b></td>
                        <td align="right">$ <%= total %></td>
                        <td>&nbsp;</td>
                    </tr>
                    <%} else { %>
                    <tr>
                        <td colspan="5" align="center">No Item Found in Cart</td>
                    </tr>
                    <% } %>
                </table>
                <% error.forEach(function(err) { %>
                <div class="error-message" style="margin: 5px"><%= err %></div>
                <% }); %>
                <% if (cart.length > 0) { %>
                <!-- <a href="/shoppingCart/checkInventory"><button type="button" style="width: auto;">Order this cart</button></a> -->
                <form action="/orders" method="POST">
                    <div>
                        <label for="name">Name</label>
                        <input type="text" id="name" name="name" required>
                    </div>
                        <label for="deliveryAddress">Delivery Address</label>
                        <input type="text" id="deliveryAddress" name="deliveryAddress" required>
                    <button type="submit" style="width: auto;">Order this cart</button>
                </form>
                <% } %>
            </div>
        </div>
        </div>
    </nav>
    </main>
<footer>
    <p></p>
</footer>

</body>
</html> 
