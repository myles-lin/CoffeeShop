<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Code Coffee</title>
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script>
        $(function(){
            <% cart.forEach(function(item, index) { %>
            $("#btn_<%= index %>").click(() => {
                if(confirm('Are you sure you want to delete this?')){
                const id = $("#product_id_<%= index %>").val();
                $.ajax({
                    url  : "/shoppingCart/" + id,
                    type : "DELETE",
                    data : {id: id},
                    dataType: "json"
                })
                .then(res => {
                    console.log(res);
                    window.location.reload();
                })
                .catch(err => {
                    console.log(err);
                });}
            });
            <% }); %>
        });
    </script>
</head>
<body>
    <header>
        <h1 style="position: absolute;left: 120px;top: 0;line-height: 80px;">扣咖啡</h1>
        <nav>
            <ul>
                <li>
                    <a href="/adminAuth">MANAGE</a>
                    <ul>
                        <li><a href="/products/f/add">Add Products</a></li>
                        <li><a href="/products">Manage Products</a></li>
                        <li><a href="#">Orders</a></li>
                        <li><a href="#">Reviews</a></li>
                    </ul>
                </li>
                <li><a href="/">Home</a></li>
                <li><a href="/members">MEMBER</a></li>
                <li><a href="/shoppingCart">CART</a></li>
                <li><a href="/login">SIGNIN</a></li>
                <li><a href="/members/signout">SIGNOUT</a></li>
             </ul>
       </nav>
    </header>
    <main>
    <nav>
    <div class="container">
        <div class="d-flex outer">
            <div class="row">
                <div id="category-menu">
                    <p class="gnav__link"><h3>CATEGORY</h3></p>
                        <div class="category-list"> 
                            <ul>
                                <li> <a href="">Roast Level</a>
                                    <ul><li><form action="/products/f/search" method="GET"> <input type="hidden" name="roastLevel" value="light roast"/> <input type="submit" value="Light roast"> </form></li>  
                                        <li><form action="/products/f/search" method="GET"> <input type="hidden" name="roastLevel" value="medium roast"/> <input type="submit" value="Medium roast"> </form></li>  
                                        <li><form action="/products/f/search" method="GET"> <input type="hidden" name="roastLevel" value="dark roast"/> <input type="submit" value="Dark roast"></form>  </li>  </ul>  </li>  
                                <li> <a href="">Region</a>  
                                    <ul><li> <a href="">Asia / Oceania</a> </li>  
                                        <li> <a href="">Latin America</a> </li>  
                                        <li> <a href="">Africa</a> </li>  </ul>  </li>  
                                <li> <a href="">Brewing Equipment</a>  
                                    <ul><li> <a href="">LILI</a> </li>  
                                        <li> <a href="">MHW-3BOMBER</a> </li>  
                                        <li> <a href="">NANA COFFEE ROASTERS</a> </li>  </ul>  </li>    
                            </ul>
                        </div>        
                </div>
            </div>

            <div class="row_d-flex-col flex-2" style="align-items: center;">
                <table>
                    <tr>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Unit Price</th>
                        <th>Total Price</th>
                        <th>Remove</th>
                    </tr>
                    <% if (cart.length > 0) {
                        let total = 0;
                        cart.forEach(function(item, index) { %>
                    <tr>
                        <td><%= item.product_name %></td>
                        <td align="right"><%= item.product_quantity %></td>
                        <td align="right"><%= item.product_price %></td>
                        <td align="right"><%= parseFloat(item.product_quantity) * parseFloat(item.product_price) %></td>
                        <input type="hidden" id="product_id_<%= index %>" name="id" value="<%= item.product_id %>">
                        <td><button type="button" class="btn_remove" id="btn_<%= index %>">Remove</button></td>
                    </tr>
                    <% 
                        total += parseFloat(item.product_quantity) * parseFloat(item.product_price);
                        })
                    %>
                    <tr>
                        <td colspan="3" aling="right"><b>Total</b></td>
                        <td align="right"><%= total %></td>
                        <td>&nbsp;</td>
                    </tr>
                    <%} else { %>
                    <tr>
                        <td colspan="5" align="center">No Item Found in Cart</td>
                    </tr>
                    <% } %>
                </table>
                <% error.forEach(function(err) { %>
                <div class="error-message" style="margin: 5px"><%= err %></div>
                <% }); %>
                <% if (cart.length > 0) { %>
                <!-- <a href="/shoppingCart/checkInventory"><button type="button" style="width: auto;">Order this cart</button></a> -->
                <form action="/orders" method="POST">
                    <button type="submit" style="width: auto;">Order this cart</button>
                </form>
                <% } %>
            </div>
        </div>
        </div>
    </nav>
    </main>
<footer>
    <p>ddd</p>
</footer>

</body>
</html> 