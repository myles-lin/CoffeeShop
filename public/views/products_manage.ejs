<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Manage</title>
    <link rel="stylesheet" href="/css/style.css" type="text/css">
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script>
        $(function(){
            <% products.forEach(function(product, index) { %>
            $("#btn_<%= index %>").click(() => {
                if(confirm('Are you sure you want to delete this?')){
                    const id = $("#product_id_<%= index %>").val();
                    $.ajax({
                        url  : "/products/" + id,
                        type : "DELETE",
                        data : {id: id},
                        dataType: "json"
                    })
                    .then(res => {
                        console.log(res);
                        window.location.reload();
                    })
                    .catch(err => {
                        console.log(err);
                    });
                }
            });
            <% }); %>
        });
    </script>
</head>
<body>
    <header>
        <h1 style="position: absolute;left: 80px;top: 0;line-height: 80px;">Code Coffee</h1>
        <nav>
            <ul>
                <li>
                    <a>MANAGE</a>
                    <ul>
                        <li><a href="/products/f/add">Add Products</a></li>
                        <li><a href="/products">Products List</a></li>
                        <li><a href="/orders">Orders List</a></li>
                        <li><a href="/members">Members List</a></li>
                    </ul>
                </li>
                <li><a href="/">Home</a></li>
                <li><a href="/members/page">MEMBER</a></li>
                <% if (!manageHeader.userInfo) { %>
                <li><a href="/login">SIGNIN</a></li>
                <% } else { %>
                <li><a href="/signout">SIGNOUT</a></li>
                <% } %>
                <% let sum = 0; if (manageHeader.cart) { manageHeader.cart.products.forEach(item => { sum += item.quantity }) }%>
                <li><a href="/shoppingCart">CART (<%= sum %>)</a></li>
             </ul>
       </nav>
    </header>
    <main>
    <nav>
    <div class="container">
        <div class="d-flex outer">
            <div class="row desktop-mode">
                <div id="category-menu">
                    <form action="/products/f/search" method="GET">
                        <input type="search" name="name" placeholder="Press enter to search">
                    </form>
                    <br>
                    <p class="gnav__link"><h3>CATEGORY</h3></p>
                        <div class="category-list"> 
                            <ul>
                                <li> <a>Roast Level</a>
                                    <ul><li><form action="/products/f/search" method="GET"> <input type="hidden" name="roastLevel" value="light roast"/> <input type="submit" value="Light roast"> </form></li>  
                                        <li><form action="/products/f/search" method="GET"> <input type="hidden" name="roastLevel" value="medium roast"/> <input type="submit" value="Medium roast"> </form></li>  
                                        <li><form action="/products/f/search" method="GET"> <input type="hidden" name="roastLevel" value="dark roast"/> <input type="submit" value="Dark roast"></form>  </li>  </ul>  </li>  
                                <li> <a>Region</a>  
                                    <ul><li><form action="/products/f/search" method="GET"> <input type="hidden" name="region" value="asia"/> <input type="submit" value="Asia"> </form></li>  
                                        <li><form action="/products/f/search" method="GET"> <input type="hidden" name="region" value="latin america"/> <input type="submit" value="Latin America"> </form></li>  
                                        <li><form action="/products/f/search" method="GET"> <input type="hidden" name="region" value="africa"/> <input type="submit" value="Africa"> </form> </li>  </ul>  </li>  
                                <li> <a>Equipment</a>  
                                    <ul><li><form action="/products/f/search" method="GET"> <input type="hidden" name="category" value="brewing"/> <input type="submit" value="Coffee Brewing"> </form> </li>  
                                        <li><form action="/products/f/search" method="GET"> <input type="hidden" name="category" value="grinder"/> <input type="submit" value="Coffee Grinder"> </form> </li>  
                                        <li><form action="/products/f/search" method="GET"> <input type="hidden" name="category" value="others"/> <input type="submit" value="Others"> </form> </li>  </ul>  </li>    
                            </ul>
                        </div>        
                </div>
            </div>

            <div class="row_d-flex-col flex-2" style="align-items: center;">
                <h2>Products List</h2>
                <br>
                <table>
                    <tr>
                        <th>No.</th>
                        <th>Name</th>
                        <th>Category</th>
                        <th class="desktop-mode">RoastLevel</th>
                        <th class="desktop-mode">Region</th>
                        <th>Qty</th>
                        <th>Price</th>
                        <th colspan="2" class="desktop-mode">Image Upload</th>
                        <th>Edit</th>
                        <th>Delete</th>
                    </tr>
                    <% products.forEach(function(product, index) { %>
                    <% let imageExist = "X"; if(product.imageUrl) imageExist = "O"; %>
                    <tr>
                        <td><%= index+1 %></td>
                        <td><a href="/products/<%= product._id %>"><%= product.name %></a></td>
                        <td><%= product.category %></td>
                        <td class="desktop-mode"><%= product.roastLevel %></td>
                        <td class="desktop-mode"><%= product.region %></td>
                        <td style="text-align: right;"><%= product.quantity %></td>
                        <td style="text-align: right;"><%= product.price %></td>
                        <!-- <td><%= product.content %></td> -->
                        <td class="desktop-mode"><%= imageExist %></td>
                        <td class="desktop-mode">
                            <form action="/products/imageUpload" method="POST" enctype="multipart/form-data">
                                <input style="font-size: 13px" type="file" name="file">
                                <input type="hidden" name="product_id" value="<%= product._id %>">
                                <button class="btn" type="submit">Upload</button>
                            </form>
                            <!-- <form action="/products/imageUpload" method="POST" class="form-upload" enctype="multipart/form-data"> -->
                                <!-- <input style="font-size: 13px" type="file" name="file"> -->
                                <!-- <button class="btn" type="submit">Upload</button> -->
                                
                            <!-- </form> -->
                            <!-- <input style="font-size: 13px" type="file" name="file">
                                <input style="font-size: 13px" type="submit" value="Upload"> -->
                        </td>
                        <td>
                            <form action="/products/f/edit" method="GET">
                                <input type="hidden" name="product_id" value="<%= product._id %>">
                                <button class="btn" type="submit">edit</button>
                            </form>
                        </td>
                        <td>
                            <input type="hidden" id="product_id_<%= index %>" name="id" value="<%= product._id %>">
                            <button class="btn_remove" id="btn_<%= index %>" type="button">
                            <span>Delete</span>
                            </button>
                            </form>
                        </td>
                    </tr>
                    <% }); %>
                </table>
                
                <!-- <ul>
                    <% products.forEach(function(product, index) { %>
                        <li>
                            index: <%= index+1 %> name: <%= product.name %> category: <%= product.category %>
                        </li>
                    <% }); %>
                    </ul> -->
            </div>
        </div>
        </div>
    </nav>
    </main>
<footer>
    <p></p>
</footer>

</body>
</html> 
